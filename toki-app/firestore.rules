rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: vérifier si l'utilisateur est authentifié
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: vérifier si l'utilisateur est le propriétaire
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function: vérifier si l'utilisateur est admin
    // Vérifie par email dans le token OU par champ isAdmin dans le profil
    function isAdmin() {
      return isAuthenticated() && (
        // Vérification par email (depuis le token d'authentification)
        (request.auth.token.email != null && (
          request.auth.token.email == 'vcasaubon@noovelia.com' ||
          request.auth.token.email == 'casaubonvincent@gmail.com'
        )) ||
        // Vérification par champ isAdmin dans le profil (fallback)
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true)
      );
    }
    
    // Collection users: chaque utilisateur peut lire/écrire son propre profil
    // Les admins peuvent lire tous les profils pour le dashboard KPI
    // Les admins peuvent mettre à jour leur propre champ isAdmin
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || (
        // Permettre aux admins (vérifiés par email) de mettre à jour leur propre champ isAdmin
        isAdmin() && 
        request.auth.uid == userId && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isAdmin'])
      );
      // Subscription peut être lue/écrite par owner
      
      // Sous-collection: meals (repas)
      // Les admins peuvent lire tous les repas pour les statistiques
      match /meals/{mealId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
      
      // (points system removed)
      
      // Sous-collection: targets (objectifs nutritionnels)
      match /targets/{document=**} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
      
      // Sous-collection: weights (poids historiques)
      match /weights/{document=**} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
      
      // Sous-collection: cheatDays (journées cheat)
      match /cheatDays/{date} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
      
      // Sous-collection: customFoods (aliments personnalisés)
      // Les admins peuvent lire tous les custom foods pour les statistiques
      match /customFoods/{foodId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
      }
    }
    
    // Collection globalFoods: lecture et écriture pour tous les utilisateurs authentifiés
    // (base de données collaborative partagée par tous les utilisateurs)
    match /globalFoods/{foodId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated(); // Tous les utilisateurs authentifiés peuvent ajouter/modifier
      allow delete: if isAdmin(); // Seuls les admins peuvent supprimer
    }
    
    // Collection user_logs: chaque utilisateur peut créer ses logs, lire les siens seulement
    match /user_logs/{logId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
    
    // Collection food_requests: création publique, lecture/admin pour les admins
    match /food_requests/{requestId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }
    
    // Collection api_usage: chaque utilisateur peut lire/écrire sa propre utilisation
    match /api_usage/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}


